<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:background="?attr/colorSurfaceContainerHigh">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?attr/colorSurfaceContainerHighest"
        android:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnDrag" />

    <ImageView
        android:id="@+id/btnDrag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.5"
        android:padding="12dp"
        android:src="@drawable/ic_drag_handle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sldIntensity"
        app:tint="?attr/colorOnSurface" />

    <ImageButton
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.5"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:elevation="1dp"
        android:padding="12dp"
        android:src="@drawable/ic_close"
        app:layout_constraintBottom_toBottomOf="@+id/btnDrag"
        app:layout_constraintEnd_toStartOf="@+id/btnDrag"
        app:layout_constraintTop_toTopOf="@+id/btnDrag"
        app:tint="?attr/colorOnSurface" />

    <ImageButton
        android:id="@+id/btnVisibility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.5"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:elevation="1dp"
        android:padding="12dp"
        android:src="@drawable/ic_visible"
        app:layout_constraintBottom_toBottomOf="@+id/btnDelete"
        app:layout_constraintEnd_toStartOf="@+id/btnDelete"
        app:layout_constraintTop_toTopOf="@+id/btnDelete"
        app:tint="?attr/colorOnSurface" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:alpha="0.7"
        android:includeFontPadding="false"
        android:textAllCaps="true"
        android:textColor="?attr/colorOnSurface"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="CONTRAST" />

    <com.google.android.material.slider.Slider
        android:id="@+id/sldIntensity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:valueFrom="0.0"
        android:valueTo="1.0"
        app:labelBehavior="gone"
        app:layout_constraintEnd_toEndOf="@+id/tvName"
        app:layout_constraintStart_toStartOf="@+id/tvName"
        app:layout_constraintTop_toBottomOf="@+id/tvName"
        app:trackColorInactive="@null" />

    <TextView
        android:id="@+id/lblBlendMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.7"
        android:gravity="end"
        android:includeFontPadding="false"
        android:text="Blend mode"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/spnBlendMode"
        app:layout_constraintStart_toStartOf="@+id/tvName"
        app:layout_constraintTop_toTopOf="@+id/spnBlendMode" />

    <Spinner
        android:id="@+id/spnBlendMode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/btnVisibility"
        app:layout_constraintEnd_toStartOf="@+id/btnVisibility"
        app:layout_constraintStart_toEndOf="@+id/lblBlendMode"
        app:layout_constraintTop_toTopOf="@+id/btnVisibility"
        tools:listitem="@layout/item_blend_mode" />

</androidx.constraintlayout.widget.ConstraintLayout>